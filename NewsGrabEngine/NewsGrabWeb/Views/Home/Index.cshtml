@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
        </div>
    </section>
}

<div style="overflow: hidden;border-left: 4px solid #397ddb;padding-left: 20px;font-size: 34px;line-height: 40px;letter-spacing: 4px;font-family: \5FAE\8F6F\96C5\9ED1;">
